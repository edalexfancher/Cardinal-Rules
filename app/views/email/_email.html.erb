<div class="popup" id="popup">
	<div id="x-box" onClick="document.getElementById('popup').style.display = 'none';">
    <span id="x">X</span>
	</div>
  <div class="form-area">
    <%= form_for(:post, url: email_path, html: {id: 'form', onsubmit: "document.getElementById('popup').style.display = 'none';"}) do |f| %>
      <label for="validate-email">Join our email list!</label>
      <%= f.text_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
      <%= f.submit "Submit", class: "btn btn-primary col-xs-12", id:"btn"%>
    <% end %>
    </div>
</div>
