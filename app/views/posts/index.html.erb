<div class="container">
  <div class="well well-sm quick-contact" id="top">
      <div class="row">
                  
                      <header class="responsive">
      <h1 id="logo">Cardinal Rules Property Investments</h1>
      <h3><strong>Call us:</strong> 502-909-5853</h3>
               <h3><%= mail_to "cardinalinvestmentproperty@gmail.com" do %>
  <strong>Email us:</strong> <span>cardinalinvestmentproperty@gmail.com</span>
<% end %></h3>
    </header>
          </div>
      </div>
  </div>
</div>

<div class="container-fluid">
  <div class="container container-pad" id="property-listings">  
      <div class="row"><% @posts.each do |post| %>
          <div class="col-sm-6"> 
              
              
              <div class="brdr bgc-fff pad-10 box-shad btm-mrg-20 property-listing">
                  <div class="media">
                    <% if post.youtube %>
                      <div class="video" id='video<%=post.id%>'>
                        <iframe src='https://www.youtube.com/embed/<%=post.youtube %>' frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                        <div id="close" onclick="document.getElementById('video<%=post.id%>').style.display = 'none';">Close</div>
                      </div>
                    <% end %>
                    <%= image_tag(post.photos.first.to_s, class: "responsive") %> 
                      <a class="pull-left" href="#" target="_parent">
                      

                      <div class="clearfix visible-sm"></div>

                      <div class="media-body fnt-smaller">
                          <a href="#" target="_parent"></a>

                          <h4 class="media-heading">
                            <%= number_to_currency(post.price, precision: 0) %><small class="pull-right"><%= post.address %></small></h4>


                          <ul class="list-inline mrg-0 btm-mrg-10 clr-535353">
                              <li>4,820 SqFt</li>

                              <li style="list-style: none">|</li>

                              <li><%= post.bedroom %> Beds</li>

                              <li style="list-style: none">|</li>

                              <li><%= post.bathroom %> Baths</li>
                              <br/>
                              <% if post.youtube %><li class="link" id="videos-click" onclick="document.getElementById('video<%=post.id%>').style.display = 'block';">Video</li><li>|</li><% end %>
                              <li class="link" id="photos-click">More Photos</li>
                          </ul>

                         
                      </div>
                  </div>
              </div><!-- End Listing-->
              
          </div><!-- End Col -->
          <% end %>
      </div><!-- End row -->
    </div><!-- End container -->
</div>

<%= render 'email/email' %>