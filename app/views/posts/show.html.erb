<div class="card card-container" id="post-list">
	<p>
	  <strong>Address:</strong>
	  <%= @post.address %>
	</p>

	<p>
	  <strong>City:</strong>
	  <%= @post.city %>
	</p>

	<p>
	  <strong>State:</strong>
	  <%= @post.state %>
	</p>

	<p>
	  <strong>Zip:</strong>
	  <%= @post.zip %>
	</p>

	<% @post.photos.each do |path| %>
		<%= image_tag path.to_s, width: '350' %>
	<% end %>

	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Delete', post_path(@post), method: :delete %> |
	<%= link_to 'Back', posts_path %>
</div>